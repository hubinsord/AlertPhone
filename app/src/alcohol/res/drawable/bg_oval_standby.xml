<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:innerRadiusRatio="5" android:shape="oval" android:thickness="2dp" android:useLevel="false">
            <solid android:color="@color/purple_200" />
            <stroke android:color="@color/grey_400" android:width="2dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:innerRadiusRatio="5" android:shape="oval" android:thickness="2dp" android:useLevel="false">
            <solid android:color="@color/indigo_500" />
            <stroke android:color="@color/purple_200" android:width="2dp"/>
        </shape>
    </item>
    <item >
        <shape android:innerRadiusRatio="5" android:shape="oval" android:thickness="2dp" android:useLevel="false">
            <solid android:color="@color/purple_200" />
            <stroke android:color="@color/white" android:width="2dp"/>
        </shape>
    </item>
</selector>